<div class="container">
	<section class="content">
		<h1 class="text-center">Editer fiche de projet</h1>


		<%= form_for @symptom, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
			<!-- Title -->
			<div class="form-group row">
			  <%= f.label :name, 'Nom du symptÃ´me', class: 'col-sm-2 col-form-label' %>
			  <div class="col-sm-10">
				  <%= f.text_field :name, class:'form-control' %>
			  </div>
			</div>
			<!-- description -->
			<div class="form-group row">
			  <%= f.label :description, "Description", class: 'col-sm-2 col-form-label' %>
			  <div class="col-sm-10">
				  <%= f.text_area :description, class:'form-control', rows:"3" %>
			  </div>
			</div>
			<!-- classification -->
			  <p>
			    <%= f.label :classifications %><br />
			    <% for classif in Classification.all %>
			      <%= check_box_tag "symptom[classification_ids][]", classif.id, @symptom.classifications.include?(classif) %>
			      <%=h classif.name %><br />
			    <% end %>
			  </p>
			
			<div class="form-group row">
			  <%= button_to "Enregistrer", @symptom, method: :update, class: "btn btn-primary btn-block" %>
			</div>

			<div class="form-group row">
				<%= button_to "Supprimer ", @symptom, method: :delete, class: "btn btn-danger btn-block" %>
		    </div> 
		<% end %>
	</section>
</div>